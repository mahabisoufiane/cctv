# Production Environment
FLASK_APP=run.py
FLASK_ENV=production
DEBUG=False
SECRET_KEY=SET_SECURE_RANDOM_KEY_HERE

# Database (Production)
DATABASE_URL=postgresql://user:password@prod-db-host:5432/cctv_prod
DATABASE_POOL_SIZE=20
DATABASE_POOL_RECYCLE=1800
DATABASE_ECHO=False

# Email (Production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=production-email@gmail.com
MAIL_PASSWORD=production-app-password
MAIL_DEFAULT_SENDER=noreply@cctvsystem.ma

# Security (Production)
CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# CORS (Production)
CORS_ORIGINS=https://cctvsystem.ma,https://www.cctvsystem.ma

# Logging (Production)
LOG_LEVEL=WARNING
LOG_FILE=/var/log/cctv/app.log
LOG_MAX_SIZE=52428800

# Performance
SEND_FILE_MAX_AGE_DEFAULT=31536000
JSON_SORT_KEYS=False

# SSL/TLS
PREFERRED_URL_SCHEME=https