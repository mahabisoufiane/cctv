# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=change-this-to-random-32-char-key-in-production-12345

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/cctv_db
DATABASE_POOL_SIZE=10
DATABASE_POOL_RECYCLE=3600

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@cctvsystem.ma

# Company Info (Morocco)
COMPANY_NAME=CCTV Pro
COMPANY_EMAIL=info@cctvsystem.ma
COMPANY_PHONE=+212 5XX XXX XXX
COMPANY_ADDRESS=Casablanca, Morocco
COMPANY_CURRENCY=MAD

# Security
CSRF_ENABLED=True
MAX_CONTENT_LENGTH=16777216
JSON_SORT_KEYS=False

# Localization
BABEL_DEFAULT_LOCALE=ar
BABEL_DEFAULT_TIMEZONE=Africa/Casablanca
SUPPORTED_LANGUAGES=ar,fr,en

# API Configuration
API_TITLE=CCTV System API
API_VERSION=1.0.0
API_RATE_LIMIT=100/hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cctv.log
LOG_MAX_SIZE=10485760

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# JWT
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800