# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=change-this-to-random-32-char-key-in-production-12345

# Database - Development uses SQLite (no server needed)
# For production, change to: postgresql://user:password@host:5432/dbname
DATABASE_URL=sqlite:///cctv_dev.db

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@cctvsystem.ma

# Company Info (Morocco)
COMPANY_NAME=CCTV Pro
COMPANY_EMAIL=info@cctvsystem.ma
COMPANY_PHONE=+212 5XX XXX XXX
COMPANY_ADDRESS=Casablanca, Morocco
COMPANY_CURRENCY=MAD

# Security
CSRF_ENABLED=True
MAX_CONTENT_LENGTH=16777216

# Localization
BABEL_DEFAULT_LOCALE=ar
BABEL_DEFAULT_TIMEZONE=Africa/Casablanca
SUPPORTED_LANGUAGES=ar,fr,en

# API Configuration
API_TITLE=CCTV System API
API_VERSION=1.0.0
API_RATE_LIMIT=100/hour

# JWT
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800
